<div class='container-fluid content-center'>
  <div class='login-content'>
    <div class='logo d-flex justify-content-center align-items-center'>
      <h1>LOG IN</h1>
    </div>
    <%= render 'shared/flash_messages' %>
    <div class='d-flex justify-content-center align-items-center'>
      <div class='col-md-offset-3 form-devise'>
        <%= form_for resource, as: resource_name, url: login_path, html: { class: 'new-user' } do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class='margin-bottom-30'>
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class='margin-bottom-30'>
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class='d-flex align-items-center margin-bottom--15'>
            <%= label_tag '', class: 'remember' do %>
              <%= f.check_box :remember_me %>
              <%= f.label 'Remember me', class: 'remember-text', for: :user_remember_me %>
              <span class='checkmark'></span>
            <% end %>
          </div>
          <div class='d-flex justify-content-center margin-bottom--15'>
            <%= f.submit 'Login', class: 'form-control btn btn-primary login-button' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class='d-flex justify-content-center align-items-center'>
      <%= link_to 'Signup', signup_path %>
    </div>
  </div>
</div>
