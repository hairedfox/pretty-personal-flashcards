<% if entity.errors.any? %>
  <div class='container-fluid'>
    <div id='error-explanation' class='alert alert-danger'>
      <ul>
        <% entity.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
